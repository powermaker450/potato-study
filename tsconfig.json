{
  "compilerOptions": {
    "target": "es2021",

    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["./src/custom.d.ts"],

    "sourceMap": true,
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,

    "skipLibCheck": true
  }
}
